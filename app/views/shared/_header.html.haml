%nav.navbar.navbar-default(role="navigation")
  %div.container-fluid
    %div.navbar-header
      %button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse-1")
        %span.sr-only Toggle navigate
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to image_tag("logo.png"), root_path, class: "navbar-brand"

    %div.collapse.navbar-collapse#navbar-collapse-1
      %ul.nav.navbar-nav.button-nav
        %li
          %button.btn.btn-default.navbar-btn(type="button")
            =link_to "Home", root_path
        %li
          %button.btn.btn-default.navbar-btn(type="button")
            =link_to "Comics", comics_path
        %li
          %button.btn.btn-default.navbar-btn(type="button")
            =link_to "Blog", blog_path
        %li
          %button.btn.btn-default.navbar-btn(type="button")
            =link_to "About", about_path
        - if logged_in?
          %li
            %button.btn.btn-default.navbar-btn(type="button")
              =link_to "Admin", admin_index_path
      %form.navbar-form.navbar-right
        %div.form-group
          %input.form-control(type="text" placeholder="Search")
        %button.btn.btn-default(type="submit") Submit
